@model IEnumerable<Producer>

@{
	ViewData["Title"] = "Producers";
}

<div class="row">
	<div class="col-md-10 offset-1 ">
		<table class="table">
			<thead>
				<tr>
					<th>Profile Picture</th>
					<th>Name</th>					
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var actor in Model)
				{
						<tr>
							   <td  class="align-middle">
								 <img class="rounded-circle" src="@actor.PicUrl" style="width:150px;height:150px" />
							   </td>
							   <td class="align-middle">@actor.FullName</td>
								
								<td  class="align-middle">
										<a class="btn btn-primary"asp-controller="Producers" asp-action="Edit"asp-route-id="@actor.Id"><i class="bi bi-pen"></i>Edit</a>
										<a class="btn btn-info text-white"asp-controller="Producers" asp-action="Details"asp-route-id="@actor.Id"><i class="bi bi-person-vcard"></i>Details</a>
										<a class="btn btn-danger" asp-controller="Producers" asp-action="Delete"asp-route-id="@actor.Id"><i class="bi bi-trash"></i>Delete</a>
								</td>
						</tr>
				}
			</tbody>
		</table>
	</div>

</div>

<div style="position: fixed; right: 25px; bottom: 35px;  z-index: 999;" class="text-white">
	<a asp-controller="Producers" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>