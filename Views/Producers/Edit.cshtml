@model Producer
@{
    ViewData["Title"] = "Edit Producer";
}
<div class="row text">
    <div class="col-md-8 " >
           <center>
            <h1>Edit Producer</h1>
            </center>

        <div class="row">
            <div class="col-md-8 offset-3">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview"  class="border-info rounded-circle" style="max-width: 200px" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="PicUrl" class="control-label"></label>
                        <input asp-for="PicUrl" class="form-control" />
                        <span asp-validation-for="PicUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group  mb-3">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group  mb-3">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right me-2" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts { 
            <script>

                $(document).ready(function () {
                    var output = document.getElementById('ProfilePicturePreview');
                        output.src = $("#PicUrl").val();
                })

                    $("#PicUrl").on("change", function () {
                    var output = document.getElementById('ProfilePicturePreview');
                    output.src = $(this).val();
                })
            </script>
}